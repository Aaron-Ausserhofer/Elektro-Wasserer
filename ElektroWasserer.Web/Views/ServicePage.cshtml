@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ServicePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "_Layout.cshtml";
}

@(await Html.GetBlockListHtmlAsync(Model.ContentBlocks))

<section class="bg-darkgray-950">
    <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
        <div class="mb-2 flex flex-row items-center gap-8 md:mb-12">
            <h2 class="basis-1/2 md:basis-1/3">
                <div class="relative">
                    <div class="md:pb-4">
                        <span class="font-black text-end text-3xl text-white md:text-5xl">
                            Weitere Leistungen<span class="text-yellow-400">.</span>
                        </span>
                    </div>
                </div>
            </h2>
            <div class="h-[1px] w-full basis-1/2 bg-zinc-700 md:basis-2/3"></div>
        </div>

        <div class="grid-cols-2 mt-4 grid gap-4 md:grid-cols-4 md:mt-0">
            @foreach (var servicePage in Model.Siblings<ServicePage>()!)
            {
                <a href="@servicePage.Url()" class="group relative flex h-48 items-end overflow-hidden rounded-lg bg-gray-100 shadow-lg md:h-80">
                    <img src="@servicePage.HeaderImage?.GetCropUrl()" loading="lazy" alt="Photo by Minh Pham" class="group-hover:scale-110 absolute inset-0 h-full w-full object-cover object-center transition duration-200"/>
                    <div class="opacity-60 absolute inset-0 rounded-lg bg-gradient-to-t from-black"></div>
                    <span class="relative mb-3 ml-4 inline-block text-sm font-semibold text-white">@servicePage.Name</span>
                </a>
            }
        </div>
    </div>
</section>