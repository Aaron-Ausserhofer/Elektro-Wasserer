    await Html.RenderPartialAsync("/Views/Partials/_Header.cshtml");
}
<main class="main-content">
    @RenderBody()
</main>
@{ await Html.RenderPartialAsync("/Views/Partials/_Footer.cshtml"); }
@{
    var privacyLink = "";
    var imprintLink = "";
    switch (PageState.Language?.IsoCode)
    {
        case "de":
            privacyLink = "/datenschutz";
            imprintLink = "/impressum";
            break;
        case "it":
            privacyLink = "/privacy";
            imprintLink = "/imprint";
            break;
        case "en":
            privacyLink = "/privacy";
            imprintLink = "/imprint";
            break;
    }
}
<script>
    window.eWContext = {};
    window.eWContext.language = '@PageState.Language';
    window.eWContext.privacyLink = '@(privacyLink)';
    window.eWContext.imprintLink = '@(imprintLink )';
</script>
</body>
</html>