@inherits ElektroWasserer.Web.EwUmbracoViewPage

@{
    var homePage = Model.TryConvertTo<Homepage>().Result;
}

<div class="min-h-full">
    <nav class="z-20 nav fixed w-full transition-all duration-500">
        <div class="h-20 bg-white px-4">
            <div class="-mr-2 flex items-center justify-between">
                <a href="/" class="">
                    <img class="h-16" src="https://localhost:44349/media/Elektro-Wasserer-Logo_Big.png" alt="Logo Elektro Wasserer">
                </a>
                <div class="flex">
                    <input type="checkbox" id="hamburger" class="peer sr-only relative">
                    <label for="hamburger" class="relative left-0 top-0 z-30 inline-block cursor-pointer rounded-lg p-4 transition-all duration-500">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                        </svg>
                    </label>
                    @* Sidebar *@
                    <div class="navbar-backdrop invisible fixed inset-0 bg-[#000000b3]"></div>
                    <div class="fixed bottom-0 right-0 top-0 z-50 h-full w-64 w-52 max-w-full translate-x-full transform bg-gray-100 shadow-lg transition-all duration-500 peer-checked:translate-x-0">
                        <div class="h-full p-6">
                            <div class="mb-8 flex items-center justify-between">
                                <img class="h-12" src="https://localhost:44349/media/Elektro-Wasserer-Logo_Big.png" alt="Logo Elektro Wasserer">
                                <input type="checkbox" id="hamburger" class="peer sr-only relative">
                                <label for="hamburger" class="relative left-0 top-0 z-30 inline-block cursor-pointer rounded-lg transition-all duration-500">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                    </svg>
                                </label>
                            </div>
                            <div class="mt-6 flex h-full flex-col justify-between">
                                <ul class="space-y-2">
                                    @foreach (var item in homePage?.SidebarMenuItems!)
                                    {
                                        <li class="border-b border-gray-400">
                                            <a href="@item.Url" class="flex w-full items-center justify-between p-2">
                                                @item.Name
                                            </a>
                                        </li>
                                    }
                                </ul>

                                <div class="mt-6 space-y-2 pb-[100px]">
                                    <div class="mb-4 flex max-w-72 items-start justify-start">
                                        <div class="flex">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="my-auto mr-3 inline-block size-6">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"/>
                                            </svg>
                                            <div class="flex flex-col">
                                                <span class="text-xs font-semibold">Email</span>
                                                <a class="text-sm sm:text-base" href="mailto:">info@elektrowasser.com</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4 flex max-w-72 items-start justify-start">
                                        <div class="flex">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="my-auto mr-3 inline-block size-6">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"/>
                                            </svg>
                                            <div class="flex flex-col">
                                                <span class="text-xs font-semibold">Telefon</span>
                                                <a class="text-sm sm:text-base" href="tel:">+39 348 352 8931</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="!mt-4">
                                        <span>Mo - Sa | 7:30 - 17:30</span><br/>
                                        <span>Sonntag - geschlossen</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </nav>
</div>

<script>
    const hamburger = document.querySelector("#hamburger");
    hamburger.addEventListener('click',
        () => {
            document.querySelector(".navbar-backdrop").classList.toggle('!visible');
            document.querySelector("body").classList.toggle('overflow-hidden');
        });
</script>