@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@{
    var hwItWBlock = (HowItWorksSubBlock)Model.Content;
}

<div class="content animate-fade first:active">
    <div class="grid gap-4 md:bg-gray-100 md:grid-cols-2">
        <img src="@hwItWBlock.Image?.Url()" alt="@hwItWBlock.Image?.Name" class="lazyload h-52 w-full cursor-pointer rounded object-cover md:h-96" data-fancybox="gallery">
        <div class="text-white md:text-black md:m-auto">@hwItWBlock.Text</div>
    </div>
</div>