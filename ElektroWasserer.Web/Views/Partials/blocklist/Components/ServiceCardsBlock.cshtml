@using System.ComponentModel
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@{
    var serviceCardsBlock = (ServiceCardsBlock)Model.Content;
}

<div class="m-2 flex flex-col items-center rounded p-2 text-center md:w-1/3">
    <div class="flex-shrink-0 mb-5 inline-flex h-20 w-20 items-center justify-center rounded-full bg-yellow-400">
        <img src="@serviceCardsBlock.Icon?.GetCropUrl()" class="size-10"/>
    </div>
    <div class="flex-grow">
        <h2 class="title-font mb-3 text-lg font-semibold">@serviceCardsBlock.Title</h2>
        <p class="text-base leading-relaxed">@serviceCardsBlock.Text</p>
    </div>
</div>